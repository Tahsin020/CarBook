@model CreateAuthorDto
@{
    ViewData["Title"] = "CreateAuthor";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Yazar Ekleme Sayfası</h4>
                        <p class="card-subtitle mb-4">Yazar alanına veri girişini aşağıdaki panelden yapabilirsiniz.</p>
                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputName">Yazar Adı</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Yazar Adı Girişi Yapınız...">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputDescription">Açıklama</label>
                                <textarea rows="5" class="form-control" asp-for="Description" placeholder="Açıklama Giriniz..."></textarea>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputVideoUrl">Görsel</label>
                                <input type="text" class="form-control" id="exampleInputVideoUrl" asp-for="ImageUrl" placeholder="Resim linkini Giriniz...">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Yazar Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
