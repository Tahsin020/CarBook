@model CreatePricingDto
@{
    ViewData["Title"] = "CreatePricing";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Ödeme Türü Ekleme Sayfası</h4>
                        <p class="card-subtitle mb-4">Kullanıcıların araç rezervasyon işleminde kullanacaüı ödeme türlerini buradan ekleyebilirsiniz.</p>
                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputName">Ödeme Türü</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Ödeme Türü Yazınız...">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Ödeme Türü Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


